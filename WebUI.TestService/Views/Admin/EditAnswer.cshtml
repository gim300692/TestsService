@model TestService.Domain.Entities.Answer

@{
    ViewBag.Title = "EditAnswer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Корректировка варианта ответа</h2>

<div class="container">
    <div class="row">
        <div class="col-md-12">
            @using (Html.BeginForm("EditAnswerEntity", "Admin"))
            {
                        <div class="panel panel-default">
                            <div class="panel-body">
                                    <div class="answersBlock" data-correct-max="1">

                                            <div class="input-group anwserItem">
                                                <span class="input-group-addon">
                                                    @Html.CheckBoxFor(a=>a.IsCorrect)
                                                </span>
                                                @Html.TextBoxFor(a=>a.AnswerContent, new { @class = "form-control", @placeholder = "Введите вариант ответа" })
                                                @Html.ValidationMessageFor(m => m.AnswerContent)
                                                @Html.HiddenFor(a=>a.QuestionId)
                                                @Html.HiddenFor(a=>a.Id)
                                            </div>

                                    </div>
                                </div>
                            </div>

                <p><button type="submit" class="btn btn-default btn-lg"><span class="glyphicon glyphicon-ok"></span> Завершить редактирование варианта ответа</button></p>
           }
        </div>
    </div>
</div>


