@model TestService.Domain.Entities.Question

@{
    ViewBag.Title = "EditQuestion";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Корректировка вопроса</h2>


<div class="container">
    <div class="row">
        <div class="col-md-12">
            @using (Html.BeginForm("EditQuestionEntity","Admin"))
            {
                <div id="questionBlock">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h3 class="panel-title">Вопрос №@Model.Index</h3>
                            </div>
                            <div class="questionBlock panel-body">
                                    <div class="input-group">
                                        <span class="input-group-addon">Содержание вопроса</span>
                                        @Html.TextAreaFor(m => m.QuestionContent, new { @class = "form-control", @placeholder = "Содержание вопроса" })
                                        @Html.ValidationMessageFor(m => m.QuestionContent)
                                        @Html.HiddenFor(m => m.Id)
                                        @Html.HiddenFor(m => m.TestId)
                                        @Html.HiddenFor(m=>m.Index)
                                    </div>
                                </div>
                            </div>
                        </div>
                <p><button type="submit" class="btn btn-default btn-lg"><span class="glyphicon glyphicon-ok"></span> Завершить редактирование вопроса</button></p>
             }
        </div>
    </div>
</div>
