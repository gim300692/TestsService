<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")

    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")

</head>
<body>
    <nav class="navbar navbar-default" role="navigation">
        <div class="container-fluid">
            <div calss="row">
                <nav role="navigation" class="navbar navbar">
                    <div class="container">

                        <div class="navbar-header header">

                            <div class="container">
                                <div class="row">
                                    <div>
                                        <h1>@Html.ActionLink("TestsApplication", "Index", "Home")</h1>
                                    </div>
                                </div>
                            </div>

                            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbarCollapse">
                                <span class="sr-only">Toggle navigation</span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                            </button>
                        </div>

                        <div id="navbarCollapse" class="collapse navbar-collapse navbar-left" style="width:100%;">
                            <ul class="nav nav-pills //navbar-nav" style="display:inline-block">
                                <li id="Home">@Html.ActionLink("Home", "Index", "Home")</li>
                                <li id="CreateTest">@Html.ActionLink("CreateTest", "CreateTest", "Tests")</li>
                                <li id="About">@Html.ActionLink("About", "About", "Home")</li>
                                <li id="Contact">@Html.ActionLink("Contact", "Contact", "Home")</li>
                            </ul>
                            <div class="loginBlock" style="float:right;">
                                @Html.Partial("_LoginPartial")
                            </div>
                        </div>

                    </div>
                </nav>
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @if (TempData["message"] != null)
        {
            <div class="Message">@TempData["message"]</div>
        }
        @RenderBody()
        <hr />
        <footer>
            <p>It's my footer!</p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/layoutScripts")
    @RenderSection("scripts", required: false)
</body>
</html>
